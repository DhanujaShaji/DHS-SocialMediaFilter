extends layout

block content
    div(class='row')
        div(class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box')
            form(role='form', action='/portal', method='get', class='f1')
                h3 Review Preview Decisions
                fieldset
                    h4 Decision Lists:
                    div(class="list-group")
                        a(href="/detail", class="list-group-item")
                            span(class="glyphicon glyphicon-ok")
                            | Accept Passenger 1
                        a(href="/detail", class="list-group-item")
                            span(class="glyphicon glyphicon-ok")
                            |  Accept Passenger 2
                        a(href="/detail", class="list-group-item")
                            span(class="glyphicon glyphicon-ok")
                            |   Accept Passenger 3
                        a(href="/detail", class="list-group-item")
                            span(class="glyphicon glyphicon-ok")
                            |   Accept Passenger 4
                        a(href="/detail", class="list-group-item")
                            span(class="glyphicon glyphicon-remove")
                            |   Deny Passenger 1
                        a(href="/detail", class="list-group-item")
                            span(class="glyphicon glyphicon-remove")
                            |   Deny Passenger 2
                    div(class="form-group")
                        button(type='submit', class='btn btn-submit') Back

block script
extends layout

block content
    div(class='row')
        div(class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box')
            form(role='form', action='/portal', method='get', class='f1')
                h3 Administration Panel: Review Past Decisions.
                fieldset
                    h4 Decision Lists:
                    table(class="table table-striped")
                        thead
                            tr
                                th #
                                th Date
                                th Twitter Handle
                                th Agent
                        tbody
                            if typeof(previousDecisions) != "undefined"
                                each decision in previousDecisions
                                    tr(onclick="location.href=\'detail?action=review&id=" + decision['id'] + "\'")
                                        th= decision['id']
                                        td= decision['date']
                                        td= decision['twitter']
                                        td= decision['agent']
                    div(class="f1-buttons")
                        button(type='submit', class='btn btn-info', name='action', value='home') Home

block script
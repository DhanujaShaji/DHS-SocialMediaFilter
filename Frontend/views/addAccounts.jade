extends layout

block content
    div(class='row')
        div(class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box')
            form(role='form', action='/addAccounts', method='get', class='f1', style="")
                h3 Manage Accounts
                fieldset
                    table(class="table table-striped table-responsive", style="table-layout: fixed;")
                        thead
                            tr
                                th(style="text-align: center;") Last Name
                                th(style="text-align: center;") First Name
                                th(style="text-align: center;") Role
                                th(style="text-align: center;") Deactivate
                        tbody
                            if typeof(accounts) != "undefined"
                                each account in accounts
                                    tr
                                        td(style="vertical-align: middle;text-align: center;")= account['first']
                                        td(style="vertical-align: middle;text-align: center;")= account['last']
                                        td(style="vertical-align: middle;text-align: center;")= account['role']
                                        td(style="vertical-align: middle;text-align: center;")
                                            button(type='button', class='btn btn-danger', name='action',
                                            style="min-width: 0;margin: 0;",
                                            onclick="window.location.href='addAccounts?action=delete&agentName=" +
                                            account['first'] + "%20" + account['last'] + "';") Deactivate
                    table(class="table table-striped table-responsive", style="table-layout: fixed;")
                        thead
                            tr
                                th(style="text-align: center;") First Name
                                th(style="text-align: center;") Last Name
                                th(style="text-align: center;") Password
                                th(style="text-align: center;") Role
                                th(style="text-align: center;") 
                        tbody
                            tr
                                td(style="vertical-align: middle;text-align: center;")
                                    input(type="text", name='firstName', style="max-width: 100%")
                                td(style="vertical-align: middle;text-align: center;")
                                    input(type="text", name='lastName', style="max-width: 100%")
                                td(style="vertical-align: middle;text-align: center;")
                                    input(type="password", name='password', style="max-width: 100%")
                                td(style="vertical-align: middle;text-align: center;")
                                    select(name="role", class="form-control", style="max-width: 100%")
                                        option(value="Agent") Agent
                                        option(value="Supervisor") Supervisor
                                td(style="vertical-align: middle;text-align: center;min-width: 0;")
                                    button(type='submit', class='btn btn-yes', name='action',
                                    style="min-width: 0;margin: 0;", value='add') Add
                    div(class='f1-buttons')
                        button(type='button', onclick="location.href=\'portal\'", class='btn btn-submit',
                        name='action', value='back')
                            span(class="glyphicon glyphicon-home", aria-hidden="true")

block script
extends layout

block content
    div(class='top-content')
        div(class='container')
            div(class='row')
                div(class='col-sm-8 col-sm-offset-2 text')
                    h1 Social Media Filter
                    div(class='description')
                        p This is a very basic demo to illustrate the front end.
            div(class='row')
                div(class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box')
                    form(role='form', action='/decision', method='get', class='f1')
                        h3 Social Media Examine
                        p Statistic Report
                        div(class='f1-steps')
                            div(class='f1-progress')
                                div(class='f1-progress-line', data-now-value='70', data-number-of-steps='5',
                                style='width: 70%;')
                            div(class='f1-step')
                                div(class='f1-step-icon')
                                    i(class='fa fa-id-card')
                                p(class='hidden-xs') Twitter Account
                            div(class='f1-step')
                                div(class='f1-step-icon')
                                    i(class='fa fa-bar-chart')
                                p(class='hidden-xs') Statistic Report
                            div(class='f1-step')
                                div(class='f1-step-icon')
                                    i(class='fa fa-user-secret')
                                p(class='hidden-xs') Anonymized Twitter Data
                            div(class='f1-step active')
                                div(class='f1-step-icon')
                                    i(class='fa fa-twitter')
                                p(class='hidden-xs') Original Twitter Data
                            div(class='f1-step')
                                div(class='f1-step-icon')
                                    i(class='fa fa-gavel')
                                p(class='hidden-xs') Make a Decision
                        fieldset
                            h4 Original Tweets:
                                div(class='panel panel-danger')
                                    div(class='panel-heading') Sending Date: 2012-12-21 (flagged)
                                    div(class='panel-body') 2012 will #[a(class="btn btn-danger btn-xs", data-toggle="popover", role="button", data-trigger="focus", tabindex="0", data-placement="bottom", title="Sensitive Type", data-content="Dangerous Keyword") destroy] the world!!!
                                        a @someone
                                        a #sometag
                                div(class='panel panel-warning')
                                    div(class='panel-heading') Sending Date: 2012-12-21 (uncertain)
                                    div(class='panel-body') The world hasn't been #[a(class="btn btn-warning btn-xs", data-toggle="popover", role="button", data-trigger="focus", tabindex="0", data-placement="bottom", title="Sensitive Type", data-content="Dangerous Keyword") destroyed]!!!
                                        a @someone
                                        a #sometag
                                div(class='panel panel-success')
                                    div(class='panel-heading') Sending Date: 2012-12-22 (not flagged)
                                    div(class='panel-body') Hello World :)
                                        a @someone
                                        a #sometag
                                h4 Do you have enough information to make a decision?
                                div(class='f1-buttons')
                                    button(type='submit', class='btn btn-yes', name='action', value='yes') Yes
                                    button(type='submit', class='btn btn-no', name='action', value='no') No

block script
    script.
        $(function () {
            $('[data-toggle="popover"]').popover()
        })
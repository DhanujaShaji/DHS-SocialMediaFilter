extends layout

block content
    div(class='row')
        div(class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box')
            form(role='form', action='/portal', method='get', class='f1')
                h3 Welcome, [First Name] [Last Name] (#{data["name"]})
                p Please choose the action you want to conduct:
                fieldset
                    div(class="f1-buttons")
                        button(type='submit', class='btn btn-yes', style='width: 200px', name='action', value='audit') Screen Travelers
                        button(type='submit', class='btn btn-primary', style='width: 200px', name='action', value='review') Review Past Decisions
                        button(type='submit', class='btn btn-info', style='width: 200px', name='action', value='passcode') Generate Passcode
                        button(type='submit', class='btn btn-warning', style='width: 200px', name='action', value='account') Account Management
                        button(type='submit', class='btn btn-no', style='width: 200px', name='action', value='logout') Logout
block script
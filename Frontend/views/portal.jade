extends layout

block content
    div(class='row')
        div(class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box')
            form(role='form', action='/portal', method='get', class='f1')
                h3 Welcome, #{data["name"]}
                p Please choose the action you want to conduct:
                fieldset
                    div(class="f1-buttons")
                        button(type='submit', class='btn btn-yes', name='action', value='audit') Audit
                        button(type='submit', class='btn btn-no', name='action', value='review') Review
block script
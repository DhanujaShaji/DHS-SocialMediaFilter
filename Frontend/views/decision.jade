extends layout

block content
    div(class='row')
        div(class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box')
            form(role='form', action='/decision', method='get', class='f1')
                h3 Twitter Account Review
                p Decision Entry: Does #{account}â€™s account pass review?
                div(class='f1-steps')
                    div(class='f1-progress')
                        div(class='f1-progress-line', data-now-value='90', data-number-of-steps='5',
                        style='width: 90%;')
                    div(class='f1-step')
                        div(class='f1-step-icon')
                            i(class='fa fa-id-card')
                        p(class='hidden-xs') Twitter Account
                    div(class='f1-step')
                        div(class='f1-step-icon')
                            i(class='fa fa-bar-chart')
                        p(class='hidden-xs') Statistic Report
                    div(class='f1-step')
                        div(class='f1-step-icon')
                            i(class='fa fa-user-secret')
                        p(class='hidden-xs') Flagged Twitter Data
                    div(class='f1-step')
                        div(class='f1-step-icon')
                            i(class='fa fa-twitter')
                        p(class='hidden-xs') Original Twitter Data
                    div(class='f1-step active')
                        div(class='f1-step-icon')
                            i(class='fa fa-gavel')
                        p(class='hidden-xs') Make a Decision
                fieldset
                    h4 Make a Decision
                    p Click 'Yes', if the account passes review.
                    p Click 'No', if the account does not pass review. Further discussion or review is needed.
                    div(class='f1-buttons')
                        input(type='hidden', name='twitter', value=account)
                        button(type='submit', class='btn btn-yes', name='action', value='yes') Yes
                        button(type='submit', class='btn btn-no', name='action', value='no') No
                        button(type='submit', class='btn btn-info', name='action', value='home')
                            span(class="glyphicon glyphicon-home", aria-hidden="true")
block script
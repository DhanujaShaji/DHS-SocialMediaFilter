extends layout

block content
    div(class='top-content')
        div(class='container')
            div(class='row')
                div(class='col-sm-8 col-sm-offset-2 text')
                    h1 Social Media Filter
                    div(class='description')
                        p This is a very basic demo to illustrate the front end.
            div(class='row')
                div(class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box')
                    form(role='form', action='/report', method='get', class='f1')
                        h3 Social Media Examine
                        p Fill in the form to get pass
                        div(class='f1-steps')
                            div(class='f1-progress')
                                div(class='f1-progress-line', data-now-value='10', data-number-of-steps='5',
                                style='width: 10%;')
                            div(class='f1-step active')
                                div(class='f1-step-icon')
                                    i(class='fa fa-id-card')
                                p(class='hidden-xs') Twitter Account
                            div(class='f1-step')
                                div(class='f1-step-icon')
                                    i(class='fa fa-bar-chart')
                                p(class='hidden-xs') Statistic Report
                            div(class='f1-step')
                                div(class='f1-step-icon')
                                    i(class='fa fa-user-secret')
                                p(class='hidden-xs') Anonymized Twitter Data
                            div(class='f1-step')
                                div(class='f1-step-icon')
                                    i(class='fa fa-twitter')
                                p(class='hidden-xs') Original Twitter Data
                            div(class='f1-step')
                                div(class='f1-step-icon')
                                    i(class='fa fa-gavel')
                                p(class='hidden-xs') Make a Decision
                        fieldset
                            h4 Please Enter the Twitter Account
                            div(class='form-group')
                                label(class='sr-only', for='f1-twitter-account') Twitter Account
                                input(type='text', name='f1-twitter-account', placeholder='Twitter Account...',
                                class='f1-twitter-account form-control', id='f1-twitter-account')
                            div(class='f1-buttons')
                                button(type='submit', class='btn btn-submit') Submit

block script